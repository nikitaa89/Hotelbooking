<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>BNB</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
  </head>
  <body>

    <%- include("../includes/navbar.ejs") %>
    <% layout("./layouts/boilarplate.ejs") %>
    
    <h3>All Listings</h3>
    <!-- <form method="GET" action="/listings/new">
      <button>Create New Listing</button>
    </form> -->

    <div class="row">
      <% for(let listing of allListings) { %>
        <div class="card" style="width: 18rem;">
          <img src="<%= listing.image.url %>" class="card-img-top" style="height: 18rem;" alt="">
          <div class="card-body">
            <h5 class="card-title"><%= listing.title %></h5>
            <p class="card-text"> location <%= listing.location %></p>
            <p class="card-text" >Country <%= listing.country %></p>
            <p class="card-text">â‚¹<%= listing.price.toLocaleString("en-IN") %>/night</p>
            <a href="/listings/<%= listing._id %>" class="btn btn-primary">Check</a>
          </div>
        </div>
      <% } %>
    </div>

 

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
  </body>
</html>
