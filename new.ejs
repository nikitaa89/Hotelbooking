<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>BNB</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
  </head>
  <body>
    <%- include("../includes/navbar.ejs") %>
   

    <div class="row">
      <div class="col-8 offset-2">
        <h3>Create a New Listing</h3>
      <form method="POST" action="/listings" novalidate class="needs-validation">

        <div>
          <label for="title" class="form-label">Title</label>
          <input required name="listing[title]" id="title" class="form-control" placeholder="enter title" type="text" />
        </div>
  
        <div>
          <label for="description" class="form-label">Description</label>
          <textarea  name="listing[description]" id="description" placeholder="enter description" class="form-control"></textarea>
        </div>
  
        <div>
          <label for="image" class="form-label">Image</label>
          <input
          required
          name="listing[image][url]"
          id="image"
          class="form-control"
          placeholder="enter image URL/Link"
          type="text"
  
        />
        </div>

        <div class="row">
        <div class="col-md-4">
          <label for="price" class="form-label">Price</label>
          <input required name="listing[price]" class="form-control" placeholder="enter price" type="number" id="price"/>
        </div>
  
        <div class="col-md-8">
          <label for="country" class="form-label">Country</label>
          <input required name="listing[country]" class="form-control" id="country" placeholder="enter country" type="text" />
        </div>
      </div>
        
  
        <div>
          <label for="location" class="form-label">Location</label>
          <input
          name="listing[location]"
          placeholder="enter location"
          type="text"
          class="form-control"
          required
        />
        </div><br>
        <button class="btn btn-primary offset-md-4 col-2" type="submit">ADD</button>
      </form>


    </div>

    </div>


    
    <% layout("./layouts/boilarplate.ejs") %>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
  </body>
</html>
